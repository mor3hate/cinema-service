{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./app/",
		"paths": {
			// components
			"@/components/*": ["components/*"],
			"@/ui/*": ["components/ui/*"],
			"@/screens/*": ["components/screens/*"],
			// other
			"@/hooks/*": ["hooks/*"],
			"@/shared/*": ["shared/*"],
			"@/store/*": ["store/*"],
			"@/utils/*": ["utils/*"],
			"@/services/*": ["services/*"],
			"@/config/*": ["config/*"],
			"@/assets/*": ["assets/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
